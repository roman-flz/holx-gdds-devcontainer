{
  "name": "Holx GDDS Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "holx-gdds",
  "workspaceFolder": "/holx-gdds",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-containers",
        "oven.bun-vscode",
        "BeardedBear.beardedtheme",
        "BeardedBear.beardedicons",
        "miguelsolorio.symbols",
        "WallabyJs.console-ninja",
        "aaron-bond.better-comments",
        "naumovs.color-highlight",
        "mikestead.dotenv",
        "dsznajder.es7-react-js-snippets"
      ],
      "settings": {
        // Editor Settings
        "editor.cursorSmoothCaretAnimation": "off",
        "editor.smoothScrolling": false,
        "editor.cursorBlinking": "blink",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.lineHeight": 1.9,
        "editor.fontWeight": "400",
        "editor.fontFamily": "CaskaydiaCove Nerd Font Mono, CaskaydiaCove Nerd Font, monospace, Fira Code, Consolas, 'Courier New', monospace",
        "editor.fontSize": 11,
        "editor.fontLigatures": true,
        // Workbench Settings
        "workbench.reduceMotion": "auto",
        "workbench.iconTheme": "symbols",
        "workbench.colorTheme": "Bearded Theme Black & Emerald Soft",
        "chat.agent.codeBlockProgress": true,
        // GitHub Copilot Settings
        "github.copilot.nextEditSuggestions.enabled": true,
        // Terminal Settings
        "terminal.integrated.fontSize": 11,
        "terminal.integrated.lineHeight": 1.7,
        "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono, CaskaydiaCove Nerd Font, monospace",
        "terminal.integrated.fontLigatures.enabled": true,
        "terminal.integrated.smoothScrolling": false,
        "terminal.integrated.tabs.enableAnimation": true,
        "terminal.integrated.fontWeight": "400",
        "terminal.integrated.gpuAcceleration": "on",
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/installations.sh",
  "remoteUser": "vscode",
  "forwardPorts": [
    3000,
    8080
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  }
}